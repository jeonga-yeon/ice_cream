extends layout.pug 

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") 영상
        input(type="file", accept="video/*", id="video", name="post")
        label(for="image") 사진
        input(type="file", accept="image/*", id="image", name="post")
        input(type="text", placeholder="제목", required, name="title", maxlength=30)
        input(type="text", placeholder="내용", required, name="content", maxlength=140)
        input(type="text", placeholder="해시태그", required, name="hashtags")
        input(type="submit", value="포스트")