doctype html
html(lang="ko")
    head
        title #{pageTitle}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        block link
    body
        header 
            nav 
                ul 
                    li 
                        a(href="/") Home
                    li 
                        a(href="/search") 검색
                    if loggedIn 
                        li 
                            a(href="/posts/upload") 포스트 작성
                        li 
                            a(href="/my-profile") #{loggedInUser.nickname}의 프로필
                        li 
                            a(href="/users/logout") 로그아웃
                        li 
                            a(href="/users/edit-profile") 프로필 수정
                    else 
                        li 
                            a(href="/login") 로그인
                        li 
                            a(href="/join") 회원가입
        main 
            block content
    include partials/footer
    block script