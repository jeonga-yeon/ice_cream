mixin comment(comment)
    a(href=`/posts/${comment.post.id}`).comment-mixin
        .comment-mixin__data
            span.comment-mixin__title=comment.post.title 
                .comment-mixin__meta
                    span posted by #{comment.post.owner.nickname}
                    br
                    span.comment-mixin__comment #{comment.text}
                    br 
                    span 조회수 #{comment.post.meta.views}
                    span.date__created #{comment.post.creationDate}