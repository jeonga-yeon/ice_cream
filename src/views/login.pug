extends layout 

block content 
    form(method="POST")
        input(name="email", type="email", required, placeholder="이메일")
        input(name="password", type="password", required, placeholder="비밀번호")
        input(type="submit", value="로그인")
    if errorMessage 
        .error__message
            span=errorMessage
    .click__join 
        a(href="/join") 회원가입